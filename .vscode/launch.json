  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron Main",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "program": "${workspaceRoot}/src/electron-main.js",
      "protocol": "inspector",
      "console": "internalConsole",
      "env": { "ELECTRON_START_URL": "http://localhost:3000" }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}\\src\\test\\merge.test.js"
    }
  ]
}
